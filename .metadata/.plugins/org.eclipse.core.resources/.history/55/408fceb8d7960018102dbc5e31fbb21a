	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int [] numbers;
		numbers = new int[5];
		
		numbers[0]=100;
		numbers[1]=200;
		numbers[2]=100;
		numbers[3]=300;
		numbers[4]=400;
		
		int add = numbers[0]+numbers[1]+numbers[2]+numbers[3]+numbers[4];
		System.out.println("Addition: "+add);
	}
